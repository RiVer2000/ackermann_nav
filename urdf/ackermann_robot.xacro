<?xml version="1.0"?>
<robot name="ackermann_bot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:property name="wheelbase" value="0.5"/>
  <xacro:property name="track_width" value="0.4"/>
  <xacro:property name="wheel_radius" value="0.1"/>

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.5 0.3 0.2"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="base_to_front_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="front_wheel"/>
    <origin xyz="0.25 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="front_wheel">
    <visual>
      <geometry>
        <cylinder length="0.02" radius="${wheel_radius}"/>
      </geometry>
    </visual>
  </link>

  <joint name="base_to_rear_wheel" type="fixed">
    <parent link="base_link"/>
    <child link="rear_wheel"/>
    <origin xyz="-0.25 0 0"/>
  </joint>

  <link name="rear_wheel">
    <visual>
      <geometry>
        <cylinder length="0.02" radius="${wheel_radius}"/>
      </geometry>
    </visual>
  </link>

</robot>

